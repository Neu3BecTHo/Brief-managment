# Ключ валидации Cookie - сгенерируйте новый ключ для production
COOKIE_VALIDATION_KEY=your-secret-key-here

# Конфигурация БД
DB_HOST=localhost
DB_NAME=brief_management
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Конфигурация SMTP
SMTP_HOST=smtp.gmail.com # SMTP сервер
SMTP_PORT=465 # Порт SMTP
SMTP_USERNAME=your_smtp_username # Имя пользователя SMTP
SMTP_PASSWORD="your_smtp_password" # Пароль SMTP
SMTP_ENCRYPTION=ssl # Шифрование SMTP
SMTP_EMAIL=your_smtp_email # Email отправителя

# Конфигурация приложения
YII_ENV=prod
YII_DEBUG=0